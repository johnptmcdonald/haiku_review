<% provide(:title, @user.name) %>

<div class="row">


	<aside class="col-md-4 user_info">

		<section>
			<%= link_to gravatar_for(@user, size: 60), @user %>
			<h4><%= @user.name %></h4>
		</section>


    <section class="stats">
      <%= render 'shared/stats' %>
    </section>

    <br><br>

    <section class="follow_form">
      <%= render 'follow_form' if logged_in? %>
    </section>
	</aside>
	<div class="col-md-8">
      

    	<% if @user.microposts.any? %>
     		<h3>Microposts (<%= @user.microposts.count %>)</h3>
          <%= will_paginate @microposts %>
      		<ol class="microposts">
        		<%= render @microposts %>
      		</ol>
      		<%= will_paginate @microposts %>
    	<% end %>
  	</div>

</div>

