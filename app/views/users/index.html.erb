<% provide(:title, 'All users') %>

<h1 class="text-center">All users</h1>

<%= will_paginate %>

<ul class="users">
	<% @users.each do |user| %>
		<li>
		<%= gravatar_for user, size: 60  %>
		<%= link_to user.name, user  %><br>

		<% unless current_user?(user) %>
		  <div id="follow_form">
		  	<% if current_user.following?(user) %>
			    <%= form_for(current_user.active_relationships.find_by(followed_id: user.id), html: { method: :delete }, remote: true) do |f| %>
				  <%= f.submit "Unfollow", class: "btn following" %>
				<% end %>
		  	<% else %>
			    <%= form_for(current_user.active_relationships.build(followed_id: user.id), remote: true) do |f| %>
				  <div><%= hidden_field_tag :followed_id, user.id %></div>
				  <%= f.submit "Follow", class: "btn btn-primary" %>
				<% end %>
		  <% end %>
		  </div>
		<% end %>

		<% if current_user.admin? && current_user != user %>
			| <%= link_to 'Delete', user, method: :delete, data: { confirm: "Are you sure?" } %>
		<% end %>
		</li>
	<% end %>

</ul>

<%= will_paginate %>