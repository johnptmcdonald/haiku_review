<div class="row">
		


		

		<% if @movie['movies'].nil? %>

			<div class="col-md-4 col-md-offset-4">
				<h1>Movie Search</h1>
				<%= render 'shared/search_form' %>
			</div>
		<% else %>

		<div class="col-md-12">
			<% @movie['movies'].each do |movie| %>

			

			<div class = "microposts">

			<li>
				<img src=<%= movie['posters']['detailed']%> class="moviethumbnail"></img>

				<div class = "movietitle h3">
					<% title = movie['title'] %>
					<% year = movie['year']%>	
					<% params[:id] = movie['id'] %>
					<%= link_to movie['title'], search_path(params[:id], title: title, year: year, picture: movie['posters']['original']) %> <br><%= year %>
					
				</div>

				
				<div class="synopsis">	
					<%= movie['synopsis'] %>
				</div>

				
			</li>
		</div>
		<% end %>
		<% end %>
</div>
</div>

