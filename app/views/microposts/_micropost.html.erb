<li id="micropost-<%= micropost.id %>">

  <%= link_to image_tag(micropost.picture), search_path(micropost.movie_ref) %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="content"><%= simple_format(micropost.content) %></span>
  <span class="title"><%= micropost.title %></span>
  <span class="picture"><%= micropost.picture %></span>
  <span class="year"><%= micropost.year %></span>
  <span class="movie_ref"><%= micropost.movie_ref %></span>


  <span class="timestamp">
    Posted <%= time_ago_in_words(micropost.created_at) %> ago.
    <% if current_user?(micropost.user) %>
      <%= link_to "delete", micropost, method: :delete, data: { confirm: "You sure?" }, title: micropost.content %>
    <% end %>
  </span>
</li>
